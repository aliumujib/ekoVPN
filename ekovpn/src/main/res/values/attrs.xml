<resources>

    <declare-styleable name="RippleAnimation">
        <attr name="rb_color" format="color" />
        <attr name="rb_strokeWidth" format="dimension" />
        <attr name="rb_radius" format="dimension" />
        <attr name="rb_duration" format="integer" />
        <attr name="rb_rippleAmount" format="integer" />
        <attr name="rb_scale" format="float" />

        <attr name="rb_type" format="enum">
            <enum name="fillRipple" value="0" />
            <enum name="strokeRipple" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PremiumPurchaseView">
        <attr name="bold_title" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ProfileActionView">
        <attr name="action_title" format="reference|string"/>
        <attr name="action_subtitle" format="reference|string"/>
        <attr name="action_icon" format="reference"/>
        <attr name="action_button_text" format="reference|string"/>
        <attr name="show_divider" format="boolean"/>
    </declare-styleable>

</resources>