<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?actionBarSize">

    <androidx.cardview.widget.CardView
        android:id="@+id/connect_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/two_spaces"
        app:cardCornerRadius="@dimen/one_space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/two_spaces">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/connection_status_"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="@color/grey"
                android:insetTop="0dp"
                app:iconGravity="end"
                app:icon="@drawable/circle_gray"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/two_spaces"
                android:layout_marginEnd="@dimen/four_spaces"
                android:background="@color/grey"
                app:layout_constraintEnd_toStartOf="@id/connect"
                app:layout_constraintStart_toStartOf="@+id/connection_status_"
                app:layout_constraintTop_toBottomOf="@id/connection_status_" />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/connect"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="end"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:cornerRadius="45dp"
                app:icon="@drawable/power_icon"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/eko_red"
                app:strokeWidth="@dimen/three_quarter_space" />


            <ProgressBar
                android:layout_width="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/progressBar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="90dp"/>

            <TextView
                android:id="@+id/selected_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_spaces"
                android:text="@string/selected_location"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                app:layout_constraintStart_toStartOf="@+id/divider"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <ImageView
                android:id="@+id/selected_flag"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/half_space"
                app:layout_constraintStart_toStartOf="@+id/selected_title"
                app:layout_constraintTop_toBottomOf="@+id/selected_title" />


            <TextView
                android:id="@+id/selected_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/one_space"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                app:layout_constraintBottom_toBottomOf="@id/selected_flag"
                app:layout_constraintStart_toEndOf="@+id/selected_flag"
                app:layout_constraintTop_toTopOf="@+id/selected_flag" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timer_space"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:padding="@dimen/two_spaces"
        app:layout_constraintEnd_toEndOf="@+id/connect_card"
        app:layout_constraintStart_toStartOf="@+id/connect_card"
        app:layout_constraintTop_toBottomOf="@+id/connect_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_left"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"
            android:id="@+id/time_left_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_left"
            android:id="@+id/timer_view"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/half_space"
            app:layout_constraintStart_toStartOf="@id/time_left_label"
            app:layout_constraintTop_toBottomOf="@+id/time_left_label" />

        <View
            android:id="@+id/divider_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/get_more_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/get_more_time_icon"
            android:text="@string/get_more_time"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            app:icon="@drawable/get_more_time_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:iconTint="@color/black"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/select_location_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/two_spaces"
        android:layout_marginEnd="@dimen/two_spaces"
        app:cardCornerRadius="@dimen/one_space"
        app:layout_constraintEnd_toEndOf="@+id/timer_space"
        app:layout_constraintStart_toStartOf="@+id/timer_space"
        app:layout_constraintTop_toBottomOf="@+id/timer_space">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/two_spaces">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/select_location"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:backgroundTint="@color/grey"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="@string/select_location"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/black"
                app:icon="@drawable/map_icon"
                app:iconGravity="end"
                app:iconTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/arrow_down"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/country_flag"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/two_spaces"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@+id/select_location"
                app:layout_constraintTop_toBottomOf="@+id/select_location" />


            <TextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/one_space"
                android:text="@string/usa_new_york"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/country_flag"
                app:layout_constraintStart_toEndOf="@+id/country_flag"
                app:layout_constraintTop_toTopOf="@+id/country_flag" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/test_connection"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/safe_guard"
        app:iconTint="@color/white"
        android:letterSpacing="0"
        android:text="@string/test_vpn_connection"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/two_spaces"
        app:layout_constraintEnd_toEndOf="@+id/select_location_card"
        app:layout_constraintStart_toStartOf="@+id/select_location_card"
        app:layout_constraintTop_toBottomOf="@+id/select_location_card" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/privacy"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/privacy_policy"
        android:letterSpacing="0"
        android:layout_marginBottom="@dimen/two_spaces"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/select_location_card"
        app:layout_constraintBottom_toBottomOf="parent"
         />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/help"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/help"
        android:textAllCaps="false"
        android:letterSpacing="0"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/select_location_card"
        app:layout_constraintTop_toTopOf="@id/privacy" />

</androidx.constraintlayout.widget.ConstraintLayout>