<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/eight_spaces"
        android:src="@drawable/circle_green"
        android:id="@+id/availability_icon"
        android:layout_height="16dp" />


    <TextView
        android:layout_width="0dp"
        android:id="@+id/country_city_name"
        app:layout_constraintTop_toTopOf="@+id/availability_icon"
        app:layout_constraintStart_toEndOf="@+id/availability_icon"
        app:layout_constraintBottom_toBottomOf="@id/availability_icon"
        android:layout_marginStart="@dimen/one_half_space"
        android:background="?selectableItemBackground"
        android:gravity="start"
        android:padding="@dimen/two_spaces"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintEnd_toStartOf="@+id/ic_tick"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_width="16dp"
        app:layout_constraintTop_toTopOf="@+id/country_city_name"
        app:layout_constraintStart_toEndOf="@+id/country_city_name"
        app:layout_constraintBottom_toBottomOf="@id/country_city_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_tick"
        android:layout_marginEnd="@dimen/two_spaces"
        android:id="@+id/ic_tick"
        android:layout_height="16dp" />

    <View
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>