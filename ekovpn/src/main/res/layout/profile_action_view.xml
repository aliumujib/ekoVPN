<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingEnd="0dp"
    android:paddingTop="@dimen/two_spaces">

    <ImageView
        android:layout_width="18dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/two_spaces"
        app:layout_constraintTop_toTopOf="@+id/label"
        app:layout_constraintBottom_toBottomOf="@+id/description"
        android:id="@+id/iconView"
        tools:src="@drawable/ic_dollar"
        android:layout_height="18dp"/>

    <TextView
        android:id="@+id/label"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/two_spaces"
        android:layout_marginEnd="@dimen/two_spaces"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconView"
        tools:text="Engine Type" />


    <TextView
        android:id="@+id/description"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="@dimen/one_space"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@+id/label"
        app:layout_constraintStart_toStartOf="@+id/label"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        tools:text="4-Cylinder, 2.4 Liter" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/action_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/two_spaces"
        android:textAllCaps="false"
        android:gravity="end|center"
        app:layout_constraintTop_toTopOf="@id/label"
        app:layout_constraintBottom_toBottomOf="@id/description"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        tools:text="Copy" />


    <View
        android:layout_width="wrap_content"
        android:background="?dividerHorizontal"
        android:id="@+id/divider"
        android:layout_marginTop="@dimen/two_spaces"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>